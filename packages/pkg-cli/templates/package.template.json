{
  "name": "@arkfun/${name}",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/${name}.umd.js",
  "module": "dist/${name}.esm.js",
  "directories": {
    "dist": "dist",
    "src": "src"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production && rollup -c rollup.config.js --configPlugin typescript",
    "prepublish": "yarn clean",
    "publish": "yarn build"
  }
}
